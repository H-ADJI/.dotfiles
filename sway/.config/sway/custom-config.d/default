# terminal
set $term alacritty
unbindsym $mod+Return 
bindsym $mod+Return exec $term

# browser
set $browser brave --password-store=basic
unbindsym $mod+o
bindsym $mod+o exec $browser 
# screenshot
#
### Screenshot mode:
#
set {
  $screenshot "Screenshot: [S]creen or [R]egion"

  $screenshot-cmd ~/.config/sway/scripts/screenshot.sh
}

mode $screenshot {
  bindsym --to-code {
    s mode "default", exec $screenshot-cmd screen
    # w mode "default", exec $screenshot-cmd window broken option
    r mode "default", exec $screenshot-cmd region 

    Return mode "default"
    Escape mode "default"
    $mod+x mode "default"
  }
}
bindsym --to-code $mod+s mode $screenshot
